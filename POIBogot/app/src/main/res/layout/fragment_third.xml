<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="textEnd">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:scaleType="fitStart"
        android:src="@drawable/planetario"
        android:textAlignment="textStart" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_margin="15dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/infoPlanetario"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/direccionPlanetario"
        android:textAlignment="center"
        android:textSize="16sp"
        android:typeface="serif"
        app:drawableLeftCompat="@android:drawable/ic_dialog_map"
        app:drawableTint="#3949AB" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/climaPlanetario"
        android:textAlignment="center"
        android:textSize="16sp"
        android:typeface="serif"
        app:drawableLeftCompat="?android:attr/textSelectHandle"
        app:drawableTint="#3949AB" />

    <Button
        android:id="@+id/button_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="10dp"
        android:paddingStart="20dp"
        android:text="@string/previous" />


</LinearLayout>
